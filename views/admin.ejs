<%- include('partials/header', { title: 'Admin Portal' }) %>
<div>
  <div class="space">
    <h2>Admin Portal - Shift Reports</h2>
    <a href="/admin/locations" class="btn-dark">Manage Locations</a>
    <a href="/admin/spreadsheets" class="btn-dark">Spreadsheets</a>
    <a href="/admin/leaderboard" class="btn-dark">View Leaderboard</a>
    <a href="/admin/screenshots" class="btn-dark">View Screenshots</a>
    <a href="/admin/trevor" class="btn-dark">Trevor Portal</a>
  </div>

  <table border="1" cellspacing="0" cellpadding="5">
    <thead>
      <tr>
        <th>ID</th>
        <th>Valet Name</th>
        <th>Phone</th>
        <th>Shift Date</th>
        <th>Hours</th>
        <th>Cars</th>
        <th>Online Tips</th>
        <th>Cash Tips</th>
        <th>Total</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% reports.forEach(report => { %>
        <tr>
          <td><%= report.id %></td>
          <td><%= report.name %></td>
          <td><%= report.phone %></td>
          <td><%= report.shift_date %></td>
          <td><%= report.hours %></td>
          <td><%= report.cars %></td>
          <td><%= report.online_tips %></td>
          <td><%= report.cash_tips %></td>
          <td><%= Number(report.online_tips) + Number(report.cash_tips) %></td>
          <td><%= report.location_name || 'N/A' %></td>
          <td style="white-space: nowrap;">
            <a href="/admin/edit/<%= report.id %>" class="btn-dark" style="margin-right: 5px;">Edit</a>
            <form action="/admin/delete/<%= report.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this entry?');">
              <button type="submit" class="btn-dark">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<%- include('partials/footer') %>
